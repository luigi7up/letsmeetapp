<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fcfcfc" />
        </shape>
    </item>

    <item android:bottom="2dp">
        <bitmap
                android:src="@drawable/app_back_image"
                android:tileMode="repeat" />
    </item>

    <item>
        <shape android:alpha="0.5" xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="#e8e8e8"
                      android:endColor="#f4f4f4"
                      android:angle="90"
                      android:type="linear"/>
        </shape>
    </item>





</layer-list>